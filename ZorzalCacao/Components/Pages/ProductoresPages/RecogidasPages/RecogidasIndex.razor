@page "/RecogidaP/Index"
@inject RecogidasService recogidasService
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle> Consulta recogidas </PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h5 class="text-center"> <strong> Consulte recogidas </strong></h5>
        </div>

        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Desde </strong></label>
                    <InputDate class="form-control" @bind-Value="Desde" />
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Hasta </strong></label>
                    <InputDate class="form-control" @bind-Value="Hasta" />
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Filtrar por </strong></label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled> Seleccione una opcion </option>
                        <option value="RecogidaId"> Recogida Id </option>
                        <option value="PuntoEncuentro"> Punto de encuentro </option>
                        <option value="CertificacionesProducto"> Certificaciones </option>
                        <option value="EstadoEntrega"> Estado entrega </option>
                        <option value="CantidadSacos"> Cantidad de sacos  </option>
                        <option value="Chofer"> Chofer </option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Busqueda </strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                        <button class="btn btn-outline-info bi bi-search" @onclick="Buscar" />
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th> Recogida Id </th>
                            <th> Fecha </th>
                            <th> Punto de encuentro </th>
                            <th> Certificaciones </th>
                            <th> Estado de entrega </th>
                            <th> Cantidad de sacos </th>
                            <th> Chofer </th>
                            <th> Opciones </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ListaRecogidas == null || ListaRecogidas.Count == 0)
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    No se han encontrado recogidas
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var recogida in ListaRecogidas)
                            {
                                <tr>
                                    <td> @recogida.RecogidaId</td>
                                    <td> @recogida.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td> @recogida.PuntoEncuentro</td>
                                    <td> @(recogida.CertificacionesProducto != null && recogida.CertificacionesProducto.Any() ? string.Join(", ", recogida.CertificacionesProducto) : "N/A") </td>
                                    <td> @recogida.EstadoEntrega</td>
                                    <td> @recogida.CantidadSacos</td>
                                    <td> @recogida.Chofer</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary bi bi-eye" href="/RecogidaP/View/@recogida.RecogidaId" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer">
            <label class="col-12"> <strong> Conteo recogidas: </strong> @(ListaRecogidas?.Count ?? 0) </label>
            <label class="col-12"> <strong> Total sacos: </strong> @(ListaRecogidas?.Sum(r => r.CantidadSacos).ToString("F2") ?? "0.00") </label>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;

    public string ValorFiltro { get; set; } = string.Empty;

    public DateTime? Desde { get; set; }

    public DateTime? Hasta { get; set; }

    public List<Recogidas> ListaRecogidas { get; set; } = new List<Recogidas>();

    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        // Obtener el ID del usuario logueado UNA SOLA VEZ
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        }

        await Buscar();
    }

    public async Task Buscar()
    {
        var lista = new List<Recogidas>();

        // Si el usuario está autenticado y tiene userId, filtrar por productor
        if (!string.IsNullOrEmpty(userId))
        {
            lista = await recogidasService.Listar(r => r.ProductorId == userId);
        }
        else
        {
            // Si no hay userId (por si acaso), traer todas (o lista vacía)
            lista = await recogidasService.Listar(r => true);
        }

        // Filtrar por fechas
        if (Desde.HasValue && Hasta.HasValue)
        {
            lista = lista.Where(r => r.Fecha >= Desde && r.Fecha <= Hasta).ToList();
        }

        // Filtrar por otros criterios
        if (!string.IsNullOrEmpty(ValorFiltro))
        {
            if (Filtro == nameof(Recogidas.RecogidaId) && int.TryParse(ValorFiltro, out int id))
            {
                lista = lista.Where(r => r.RecogidaId == id).ToList();
            }
            else if (Filtro == nameof(Recogidas.CantidadSacos) && double.TryParse(ValorFiltro, out double cantidad))
            {
                lista = lista.Where(r => r.CantidadSacos == cantidad).ToList();
            }
            else if (Filtro == nameof(Recogidas.PuntoEncuentro))
            {
                lista = lista.Where(r => r.PuntoEncuentro.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
            else if (Filtro == nameof(Recogidas.EstadoEntrega))
            {
                lista = lista.Where(r => r.EstadoEntrega.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
            else if (Filtro == nameof(Recogidas.CertificacionesProducto))
            {
                lista = lista.Where(r => r.CertificacionesProducto != null &&
                    r.CertificacionesProducto.Any(c => c.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase))).ToList();
            }
            else if (Filtro == nameof(Recogidas.Chofer))
            {
                lista = lista.Where(r => r.Chofer.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
        }

        ListaRecogidas = lista;
    }
}