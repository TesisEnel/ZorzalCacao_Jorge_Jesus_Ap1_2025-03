@page "/Zonas/View/{ZonaId:int}"
@inject ZonasProduccionService zonasService
@inject NavigationManager navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Productor")]

<PageTitle>Detalles de Zona de Producción</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-lg border-0">

                <!-- HEADER -->
                <div class="card-header bg-accenttext-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1 text-contrast">
                                <i class="bi bi-map"></i> Detalles de Zona de Producción
                            </h4>
                            <small>ID: #@zona.ZonaId</small>
                        </div>

                        <a href="/ZonasProduccion/Index"
                            class="btn btn-light btn-sm bi bi-arrow-left"> Regresar </a>
                    </div>
                </div>

                <!-- BODY -->
                <div class="card-body p-4">

                    <!-- Nombre -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-success border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-success text-white me-3">
                                        <i class="bi bi-signpost-2-fill fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Nombre de la zona</small>
                                        <p class="mb-0 fs-5">@zona.Nombre</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Provincia -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-primary border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-primary text-white me-3">
                                        <i class="bi bi-geo-fill fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Provincia</small>
                                        <p class="mb-0 fs-5">@zona.Provincia</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Distancia -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-warning border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-warning text-dark me-3">
                                        <i class="bi bi-rulers fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Distancia aproximada</small>
                                        <h5 class="mb-0">@zona.Distancia km</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-primary border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-primary text-white me-3">
                                        <i class="bi bi-info-circle-fill fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Referencia</small>
                                        <p class="mb-0 fs-5">@zona.Referencia</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- FOOTER -->
                <div class="card-footer bg-white d-flex justify-content-center gap-2">
                    <a href="/Zonas/Index"
                        class="btn btn-outline-accent bi bi-arrow-left-circle"> Regresar </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ZonaId { get; set; }

    private ZonasProduccion? zona { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        zona = await zonasService.Buscar(ZonaId);
    }
}
