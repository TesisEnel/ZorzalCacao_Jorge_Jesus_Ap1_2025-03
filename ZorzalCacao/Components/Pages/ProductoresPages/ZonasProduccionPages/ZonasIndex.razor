@page "/Zonas/Index"
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ZonasProduccionService zonaService
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Productor")]

<PageTitle> Consulta Zonas </PageTitle>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h5 class="text-center"> <strong> Consulte zonas de producción </strong></h5>

            <div class="d-flex justify-content-end">
                <a class="btn btn-info bi bi-plus-square" href="/Zonas/Create"> Crear zona </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Desde </strong></label>
                    <InputDate class="form-control" @bind-Value="Desde" />
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Hasta </strong></label>
                    <InputDate class="form-control" @bind-Value="Hasta" />
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Filtrar por </strong></label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value ="" selected disabled> Seleccione una opcion </option>
                        <option value="ZonaId"> Zona Id </option>
                        <option value="Nombre"> Nombre </option>
                        <option value="Provincia"> Provincia </option>
                        <option value="Distancia"> Distancia </option>
                        <option value="Referencia"> Referencia </option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"> <strong> Busqueda </strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar" />
                        <button class="btn btn-outline-info bi bi-search" @onclick="Buscar" />
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th> Zona Id </th>
                            <th> Nombre </th>
                            <th> Provincia </th>
                            <th> Distancia (Km) </th>
                            <th> Referencia </th>
                            <th> Opciones </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ListaZonas == null || ListaZonas.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No se han encontrado zonas de producción
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var zona in ListaZonas)
                            {
                                <tr>
                                    <td>@zona.ZonaId</td>
                                    <td>@zona.Nombre</td>
                                    <td>@zona.Provincia</td>
                                    <td>@zona.Distancia</td>
                                    <td>@zona.Referencia</td>

                                    <td>
                                        <a class="btn btn-sm btn-outline-primary bi bi-eye"
                                           href="/Zonas/View/@zona.ZonaId"></a>

                                        <a class="btn btn-sm btn-outline-info bi bi-pencil-square ms-2"
                                           href="/Zonas/Edit/@zona.ZonaId"></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <label class="col-12">
                <strong>Conteo zonas de producción:</strong> @(ListaZonas?.Count ?? 0)
            </label>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;

    public string ValorFiltro { get; set; } = string.Empty;

    public DateTime? Desde { get; set; }

    public DateTime? Hasta { get; set; }

    public List<ZonasProduccion> ListaZonas { get; set; } = new List<ZonasProduccion>();

    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        }

        await Buscar();
    }

    public async Task Buscar()
    {
        List<ZonasProduccion> lista = new();

        if (!string.IsNullOrEmpty(userId))
        {
            lista = await zonaService.Listar(z => z.ProductorId == userId);
        }
        else
        {
            lista = new List<ZonasProduccion>();
        }

        if (!string.IsNullOrEmpty(ValorFiltro))
        {
            if (Filtro == nameof(ZonasProduccion.ZonaId) && int.TryParse(ValorFiltro, out int id))
            {
                lista = lista.Where(z => z.ZonaId == id).ToList();
            }
            else if (Filtro == nameof(ZonasProduccion.Nombre))
            {
                lista = lista.Where(z =>
                    z.Nombre.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
            else if (Filtro == nameof(ZonasProduccion.Provincia))
            {
                lista = lista.Where(z =>
                    z.Provincia.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
            else if (Filtro == nameof(ZonasProduccion.Distancia) && double.TryParse(ValorFiltro, out double distancia))
            {
                lista = lista.Where(z => z.Distancia == distancia).ToList();
            }

            else if (Filtro == nameof(ZonasProduccion.Referencia))
            {
                lista = lista.Where(z =>
                    z.Referencia.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
        }
        ListaZonas = lista;
    }
}
