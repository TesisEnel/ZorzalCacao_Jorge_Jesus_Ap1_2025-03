@page "/Fermentacion/View/{FermentacionId:int}"
@inject FermentacionesService fermentacionesService
@inject NavigationManager navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle>Detalles de Fermentación</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1"><i class="bi bi-thermometer-half"></i> Detalles de Fermentación</h4>
                            <small>ID: #@fermentacion.FermentacionId</small>
                        </div>
                        <a href="/Fermentacion/Index" class="btn btn-light btn-sm bi bi-arrow-left"> Regresar </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Fecha y Temperatura Principal -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="info-box p-4 bg-light rounded shadow-sm">
                                <div class="row align-items-center">
                                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                                        <i class="bi bi-calendar-event text-primary fs-1"></i>
                                        <div class="mt-2">
                                            <small class="text-muted d-block">Fecha de fermentación</small>
                                            <h5 class="mb-0">@fermentacion.Fecha.ToString("dddd, dd MMMM yyyy")</h5>
                                            <small class="text-muted">@fermentacion.Fecha.ToString("hh:mm tt")</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-center text-md-start">
                                        <i class="bi bi-thermometer-half text-danger fs-1"></i>
                                        <div class="mt-2">
                                            <small class="text-muted d-block">Temperatura</small>
                                            <h5 class="mb-0">@fermentacion.Temperatura°F</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Observaciones -->
                    @if (!string.IsNullOrWhiteSpace(fermentacion.Observaciones))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="detail-card p-4 rounded border-start border-primary border-4">
                                    <div class="d-flex align-items-start">
                                        <div class="icon-circle bg-primary text-white me-3">
                                            <i class="bi bi-journal-text fs-3"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <small class="text-muted d-block mb-1">Observaciones</small>
                                            <p class="mb-0 fs-5">@fermentacion.Observaciones</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Estadísticas -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="detail-card p-4 rounded border-start border-info border-4 h-100">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-info text-white me-3">
                                        <i class="bi bi-list-ol fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Total de Detalles</small>
                                        <h4 class="mb-0 text-info">@fermentacion.FermentacionesDetalle.Count</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="detail-card p-4 rounded border-start border-success border-4 h-100">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-success text-white me-3">
                                        <i class="bi bi-box-seam fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Cantidad Total</small>
                                        <h4 class="mb-0 text-success"> @fermentacion.FermentacionesDetalle.Sum(f => f.Cantidad).ToString("F2")</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-card p-4 rounded border-start border-warning border-4 h-100">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-warning text-dark me-3">
                                        <i class="bi bi-thermometer fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Temperatura Promedio</small>
                                    <h4 class="mb-0 text-warning">
                                        @(fermentacion.FermentacionesDetalle.Any()? fermentacion.FermentacionesDetalle.Average(d => d.Temperatura).ToString("F2")
                                                                                    : "0")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-center gap-2">
                    <a href="/Fermentacion/Index" class="btn btn-secondary bi bi-arrow-left-circle"> Regresar </a>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public int FermentacionId { get; set; }

    private Fermentaciones? fermentacion { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        fermentacion = await fermentacionesService.Buscar(FermentacionId);
    }
}