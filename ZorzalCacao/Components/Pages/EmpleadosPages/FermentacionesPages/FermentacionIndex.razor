@page "/Fermentacion/Index"
@inject FermentacionesService fermentacionesServices
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle> Consulta Fermentacion </PageTitle>

<div class="container-fluid px-4 mt-4 cacao-background">

    <!-- 🟫 ENCABEZADO CACAO -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-brown mb-0">
                <i class="bi bi-fire me-1"></i> Fermentaciones
            </h3>
            <small class="text-muted">Historial de fermentación del cacao</small>
        </div>

        <a class="btn btn-cacao shadow-sm bi bi-plus-circle"
           href="/Fermentacion/Create">
            Nueva Fermentación
        </a>
    </div>

    <!-- 🟫 TARJETA PRINCIPAL -->
    <div class="card shadow border-0 rounded-4 bg-cacao-light">

        <!-- 🟫 FILTROS -->
        <div class="card-body border-bottom bg-cacao rounded-top-4">
            <div class="row align-items-end g-3">

                <div class="col-12 col-md-3">
                    <label class="form-label fw-semibold text-white">Desde</label>
                    <InputDate class="form-control" @bind-Value="Desde" />
                </div>

                <!-- Hasta -->
                <div class="col-12 col-md-3">
                    <label class="form-label fw-semibold text-white">Hasta</label>
                    <InputDate class="form-control" @bind-Value="Hasta" />
                </div>

                <!-- Filtrar por -->
                <div class="col-12 col-md-3">
                    <label class="form-label fw-semibold text-white">Filtrar por</label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" disabled selected>Seleccione una opción</option>
                        <option value="FermentacionId">Fermentación Id</option>
                        <option value="Temperatura">Temperatura</option>
                        <option value="Observaciones">Observaciones</option>
                    </InputSelect>
                </div>

                <!-- Búsqueda -->
                <div class="col-12 col-md-3">
                    <label class="form-label fw-semibold text-white">Búsqueda</label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-outline-light bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 🟫 TABLA CACAO -->
        <div class="table-responsive">
            <table class="table align-middle mb-0 text-center">

                <thead style="background:#5a3a1b; color:white;">
                    <tr>
                        <th>Fermentación Id</th>
                        <th>Fecha</th>
                        <th>Temperatura °F</th>
                        <th>Observaciones</th>
                        <th>Última Remoción</th>
                        <th>Cantidad Total</th>
                        <th>Prom. Temperatura °F</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody class="bg-white">

                    @if (ListaFermentaciones == null || ListaFermentaciones.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="py-4 text-muted">
                                <i class="bi bi-info-circle"></i> No se han encontrado fermentaciones.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var f in ListaFermentaciones)
                        {
                            <tr style="border-bottom:1px solid #e7d8c9;">
                                <td>@f.FermentacionId</td>
                                <td>@f.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@f.Temperatura</td>
                                <td>@f.Observaciones</td>
                                <td>@f.FermentacionesDetalle.Count</td>
                                <td>@f.FermentacionesDetalle.Sum(t => t.Cantidad).ToString("F2")</td>
                                <td>
                                    @(f.FermentacionesDetalle.Any()
                                                                ? f.FermentacionesDetalle.Average(d => d.Temperatura).ToString("F2")
                                                                : "0")
                                </td>

                                <td class ="d-flex justify-content-center">
                                    <a class="btn btn-sm btn-outline-cacao bi bi-eye"
                                       href="/Fermentacion/View/@f.FermentacionId"
                                       title="Ver"></a>

                                    <a class="btn btn-sm btn-outline-warning bi bi-pencil-square ms-1"
                                       href="/Fermentacion/Edit/@f.FermentacionId"
                                       title="Editar"></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- 🟫 FOOTER CON CONTADORES -->
        <div class="card-footer">

            <span class="badge bg-dark fs-6 m-0">
                Total: @ListaFermentaciones.Count
            </span>

            <span class="badge bg-dark fs-6 m-0">
                Cantidad total: @ListaFermentaciones.Sum(f => f.FermentacionesDetalle.Sum(t => t.Cantidad)).ToString("F2")
            </span>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = null!;

    public string ValorFiltro { get; set; } = string.Empty;

    public DateTime? Desde { get; set; }

    public DateTime? Hasta { get; set; }

    public List<Fermentaciones> ListaFermentaciones = new ();

    protected override async Task OnInitializedAsync ()
    {
        await Buscar();
    }

    public async Task Buscar()
    {
        var lista = await fermentacionesServices.Listar(R => true);

        if (Desde.HasValue && Hasta.HasValue)
        {
            lista = lista.Where(f => f.Fecha >= Desde && f.Fecha <= Hasta).ToList();
        }

        if (!string.IsNullOrEmpty(ValorFiltro))
        {
            if (Filtro == nameof(Fermentaciones.FermentacionId) && int.TryParse(ValorFiltro, out int id))
            {
                lista = lista.Where(f => f.FermentacionId == id).ToList();
            }

            else if (Filtro == nameof(Fermentaciones.Temperatura) && double.TryParse(ValorFiltro, out double temp))
            {
                lista = lista.Where(f => f.Temperatura == temp).ToList();
            }
            else if (Filtro == nameof(Fermentaciones.Observaciones))
            {
                lista = lista.Where(f => f.Observaciones.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }
        }
            
        ListaFermentaciones = lista;
    }
}