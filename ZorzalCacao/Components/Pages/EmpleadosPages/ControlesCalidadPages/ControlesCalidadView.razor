@page "/ControlesCalidad/View/{ControlId:int}"
@inject ControlesCalidadService controlesService
@inject RecogidasService recogidasService
@inject NavigationManager navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle>Detalles de Control de Calidad</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            <div class="card shadow-lg border-0">
                <!-- Encabezado -->
                <div class="card-header bg-accent text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1 text-contrast"><i class="bi bi-clipboard-data"></i> Detalles del Control de Calidad</h4>
                            <small>ID: #@control.ControlId</small>
                        </div>

                        <a href="/ControlesCalidad/Index" class="btn btn-light btn-sm bi bi-arrow-left">
                            Regresar
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">

                    <!-- Grados Brix -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-primary border-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-primary text-white me-3">
                                        <i class="bi bi-droplet-half fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Grados Brix</small>
                                        <h4 class="mb-0 text-primary">@control.GradosBrix</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Decisión -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start @(control.Decision == "Aprobado" ? "border-success" : "border-danger") border-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle @(control.Decision == "Aprobado" ? "bg-success" : "bg-danger") text-white me-3">
                                        <i class="bi bi-check2-square fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Decisión</small>
                                        <h4 class="mb-0 @(control.Decision == "Aprobado" ? "text-success" : "text-danger")">
                                            @control.Decision
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Observaciones -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-info border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-info text-white me-3">
                                        <i class="bi bi-journal-text fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Observaciones</small>
                                        <p class="fs-5 mb-0">@control.Observaciones</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recogida -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-warning border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-warning text-dark me-3">
                                        <i class="bi bi-truck fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Recogida</small>
                                        <h5 class="mb-0">@control.Recogida?.Fecha.ToShortDateString() - @control.Recogida?.PuntoEncuentro</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Empleado -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-secondary border-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-circle bg-secondary text-white me-3">
                                        <i class="bi bi-person-circle fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-muted d-block mb-1">Empleado Responsable</small>
                                        <h5 class="mb-0">@control.Empleado?.UserName</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-white d-flex justify-content-center gap-2">
                    <a href="/ControlesCalidad/Index" class="btn btn-outline-accent bi bi-arrow-left-circle"> Regresar </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ControlId { get; set; }

    private ControlesCalidad? control { get; set; } = new ();

    protected override async Task OnInitializedAsync()
    {
        control = await controlesService.Buscar(ControlId);
    }
}

