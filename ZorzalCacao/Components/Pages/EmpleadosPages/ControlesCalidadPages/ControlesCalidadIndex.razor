@page "/ControlesCalidad/Index"
@inject ControlesCalidadService controlesService
@inject NavigationManager nav
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle> Consulta controles de calidad </PageTitle>

<div class="container-fluid px-4 mt-4 cacao-background">

    <!-- ✅ ENCABEZADO CACAO -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-brown mb-0">
                <i class="bi bi-clipboard2-pulse me-1"></i> Controles de Calidad
            </h3>
            <small class="text-muted">Registros y evaluaciones del cacao recibido</small>
        </div>

        <a class="btn btn-cacao shadow-sm bi bi-plus-circle"
           href="/ControlesCalidad/Create">
            Nuevo Control
        </a>
    </div>

    <!-- ✅ TARJETA PRINCIPAL -->
    <div class="card shadow border-0 rounded-4 bg-cacao-light">

        <!-- ✅ FILTROS -->
        <div class="card-body border-bottom bg-cacao rounded-top-4">
            <div class="row align-items-end g-3">

                <div class="col-12 col-md-4">
                    <label class="form-label fw-semibold text-white">Filtrar por</label>

                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="">Seleccione una opción</option>
                        <option value="ControlId">Control Id</option>
                        <option value="GradosBrix">Grados Brix</option>
                        <option value="Decision">Decisión</option>
                        <option value="EmpleadoId">Empleado</option>
                        <option value="RecogidaId">Recogida</option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label fw-semibold text-white">Búsqueda</label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar control..." />
                        <button class="btn btn-outline-light bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>

                <div class="col-12 col-md-2 text-end">
                    <span class="badge bg-dark fs-6">Total: @ListaControles.Count</span>
                </div>
            </div>
        </div>

        <!-- ✅ TABLA ESTILO CACAO -->
        <div class="table-responsive">
            <table class="table align-middle mb-0 text-center">

                <thead style="background:#5a3a1b; color:white;">
                    <tr>
                        <th>Control Id</th>
                        <th>Grados Brix °Bx</th>
                        <th>Observaciones</th>
                        <th>Decisión</th>
                        <th>Recogida</th>
                        <th>Empleado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody class="text-center bg-white">

                    @if (ListaControles == null || !ListaControles.Any())
                    {
                        <tr>
                            <td colspan="7" class="py-4 text-muted">
                                <i class="bi bi-info-circle"></i> No se han encontrado controles de calidad.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var c in ListaControles)
                        {
                            <tr style="border-bottom:1px solid #e7d8c9;">

                                <td class="fw-semibold">@c.ControlId</td>
                                <td>@c.GradosBrix</td>
                                <td>@c.Observaciones</td>

                                <!-- Badge según decisión -->
                                <td>
                                    @if (c.Decision?.ToLower() == "aceptado")
                                    {
                                        <span class="badge bg-success">Aceptado</span>
                                    }
                                    else if (c.Decision?.ToLower() == "rechazado")
                                    {
                                        <span class="badge bg-danger">Rechazado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@c.Decision</span>
                                    }
                                </td>

                                <td>
                                    @c.Recogida?.Fecha.ToShortDateString()
                                    <br />
                                    <span class="badge bg-cacao-vehiculo">
                                        @c.Recogida?.PuntoEncuentro
                                    </span>
                                </td>

                                <td>@c.Empleado?.UserName</td>

                                <!-- ACCIONES -->
                                <td>
                                    <a class="btn btn-sm btn-outline-cacao bi bi-eye"
                                       href="/ControlesCalidad/View/@c.ControlId"
                                       title="Ver"></a>

                                    <a class="btn btn-sm btn-outline-warning bi bi-pencil-square ms-1"
                                       href="/ControlesCalidad/Edit/@c.ControlId"
                                       title="Editar"></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    public List<ControlesCalidad> ListaControles { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await Buscar();
    }

    public async Task Buscar()
    {
        var lista = await controlesService.Listar(c => true);

        // Filtrado
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "ControlId" && int.TryParse(ValorFiltro, out int id))
            {
                lista = lista.Where(c => c.ControlId == id).ToList();
            }

            else if (Filtro == "GradosBrix" && double.TryParse(ValorFiltro, out double brix))
            {
                lista = lista.Where(c => c.GradosBrix == brix).ToList();
            }

            else if (Filtro == "Decision")
            {
                lista = lista.Where(c => c.Decision.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }

            else if (Filtro == "Empleado")
            {
                lista = lista.Where(c => c.Empleado.UserName.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
            }

            else if (Filtro == "RecogidaId" && int.TryParse(ValorFiltro, out int rid))
            {
                lista = lista.Where(c => c.RecogidaId == rid).ToList();
            }
        }

        ListaControles = lista;
    }
}

