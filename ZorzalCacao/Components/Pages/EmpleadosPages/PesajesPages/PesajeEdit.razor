@page "/Pesaje/Edit/{PesajeId:int}"
@inject AuthenticationStateProvider AuthStateProvider
@inject PesajesService pesajeService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle> Editar Pesaje </PageTitle>

@if(Pesaje != null)
{
    <div class="container mt-3">
        <div class="card shadow-lg">
            <div class="card-header">
                <h5 class="card-title text-center">
                    <strong> Crear Pesaje </strong>
                </h5>
            </div>

            <EditForm Model="Pesaje" OnValidSubmit="GuardarPesaje">
                <DataAnnotationsValidator />
                <div class="card-body">
                    <div class="row">
                        <!-- Fecha -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"> <strong> Fecha </strong></label>
                            <InputDate class="form-control" @bind-Value="Pesaje.Fecha" />
                            <ValidationMessage For="() => Pesaje.Fecha" />
                        </div>
                    </div>
                </div>

                <div class="border border-success p-3 mt-3">
                    <h5> Detalle de Pesaje </h5>
                    <PesajePicker SacoId="detalleSeleccionado.SacoId"
                                  Cantidad="detalleSeleccionado.Cantidad"
                                  Peso="detalleSeleccionado.Peso"
                                  ListaSacos="ListaSacos"
                                  OnPesajeSeleccionado="AgregarDetalle" />
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered table-light text-center">
                            <thead>
                                <tr>
                                    <th> Cantidad </th>
                                    <th> Peso (kg) </th>
                                    <th> Peso Total (kg) </th>
                                    <th> Opciones </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Pesaje.PesajesDetalle)
                                {
                                    <tr>
                                        <td> @detalle.Cantidad</td>
                                        <td> @detalle.Peso.ToString("F2")</td>
                                        <td> @((detalle.Cantidad * detalle.Peso).ToString("F2"))</td>
                                        <td>
                                            <button type="button" class="btn btn-outline-danger bi bi-trash" @onclick="() => RemoverDetalle(detalle)">
                                                Remover
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <label class="form-label"> <strong> Conteo de Registros: </strong> @Pesaje.PesajesDetalle.Count</label>
                        <br />
                        <label class="form-label"> <strong> Cantidad Total de Sacos: </strong> @Pesaje.PesajesDetalle.Sum(d => d.Cantidad)</label>
                        <br />
                        <label class="form-label"> <strong> Peso Total: </strong> @Pesaje.PesajesDetalle.Sum(d => d.Cantidad * d.Peso).ToString("F2") kg</label>

                        <label class="form-label"> <strong> Peso Total en Quintales: </strong> @((Pesaje.PesajesDetalle.Sum(d => d.Cantidad * d.Peso) / 125).ToString("F2"))</label>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary bi bi-save"> Guardar </button>
                    <button type="button" class="btn btn-danger bi bi-trash" @onclick="() => MostrarModal = true" > Eliminar </button>
                    <a href="/Pesaje/Index" class="btn btn-secondary bi-arrow-left-circle"> Volver </a>
                </div>
            </EditForm>
        </div>
    </div>
}

else
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Cargando información...</p>
    </div>
}

@if(MostrarModal)
{
    <div class="modal d-block" role="dialog" tabindex="-1" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title mx-auto">
                        <strong> Confirmar Eliminación </strong>
                    </h5>
                </div>

                <div class="modal-body">
                    @{
                        var detalles = Pesaje?.PesajesDetalle ?? new List<PesajesDetalles>();

                        var cantidadTotal = detalles.Sum(d => d.Cantidad);
                        var pesoTotal = detalles.Sum(d => d.Peso);
                        var quintales = detalles.Sum(d => d.Cantidad * d.Peso) / 125;
                    }

                    <label class="col-12"> <strong> Datos del Pesaje </strong></label>
                    <label class="col-12"> <strong> ID: </strong> @Pesaje?.PesajeId </label>
                    <label class="col-12"> <strong> Fecha: </strong> @Pesaje?.Fecha.ToString("dd/MM/yyyy HH:mm") </label>
                    <label class="col-12"> <strong> Empleado: </strong> @Pesaje?.Empleado?.UserName </label>
                    <label class="col-12"> <strong> Cantidad Total: </strong> @cantidadTotal.ToString("F2") </label>
                    <label class="col-12"> <strong> Peso Total: </strong> @(pesoTotal* cantidadTotal) </label>
                    <label class="col-12"> <strong> Quintales: </strong> @quintales.ToString("F2") </label>

                    <label class="text-danger mt-3">
                        ¿Está seguro que desea eliminar este pesaje?
                    </label>
                </div>

                <div class="modal-footer gap-2 bg-white d-flex justify-content-center">
                    <button type="button" class="btn btn-danger bi bi-trash"
                            @onclick="EliminarPesaje">
                        Sí, eliminar
                    </button>

                    <button type="button" class="btn btn-secondary bi bi-arrow-left"
                            @onclick="() => MostrarModal = false">
                        Regresar
                    </button>
                </div>

            </div>
        </div>
    </div>
}


@code {
    [Parameter]
    public int PesajeId { get; set; }

    public Pesajes Pesaje { get; set; } = new Pesajes();

    public List<Sacos> ListaSacos { get; set; } = new List<Sacos>();

    public bool MostrarModal { get; set; } = false;

    public PesajesDetalles detalleSeleccionado { get; set; } = new PesajesDetalles()
    {
        SacoId = 1
    };

    protected override async Task OnInitializedAsync()
    {
        ListaSacos = await pesajeService.ListarSacos(p => true);
    }

    public async Task GuardarPesaje()
    {
        if (await pesajeService.Guardar(Pesaje))
        {
            navigationManager.NavigateTo("/Pesaje/Index");
        }
    }

    public async Task EliminarPesaje()
    {
        if (await pesajeService.Eliminar(PesajeId))
        {
            navigationManager.NavigateTo("/Pesaje/Index");
        }
    }

    private void AgregarDetalle((Sacos saco, double cantidad, double peso) datos)
    {
        var nuevoDetalle = new PesajesDetalles
        {
            SacoId = datos.saco.SacoId,
            Cantidad = datos.cantidad,
            Peso = datos.peso
        };

        Pesaje.PesajesDetalle.Add(nuevoDetalle);

        detalleSeleccionado = new PesajesDetalles() { SacoId = 1 };
    }

    private void RemoverDetalle(PesajesDetalles detalle)
    {
        Pesaje.PesajesDetalle.Remove(detalle);
        detalleSeleccionado = detalle;
    }
}
