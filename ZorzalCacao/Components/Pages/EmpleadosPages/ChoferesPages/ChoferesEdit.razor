@page "/Choferes/Edit/{ChoferId:int}"
@inject ChoferesService choferesService
@inject NavigationManager navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle>Editar Chofer</PageTitle>
<div class="container mt-3">
    <div class="card theme-card">

        <!-- Encabezado -->
        <div class="card-header bg-accent text-white text-center">
            <h5 class="mb-0"><strong>Crear Chofer</strong></h5>
        </div>

        <EditForm Model="chofer" OnValidSubmit="GuardarChofer">
            <DataAnnotationsValidator />

            <div class="card-body">

                @if (!string.IsNullOrEmpty(mensajeError))
                {
                    <div class="alert alert-danger">@mensajeError</div>
                }

                @if (guardado)
                {
                    <div class="alert alert-success">Chofer registrado correctamente.</div>
                }

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="col-form-label text-heading"><strong>Nombre</strong></label>
                        <InputText class="form-control theme-input" @bind-Value="chofer.Nombre" />
                        <ValidationMessage For="() => chofer.Nombre" />
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label class="col-form-label text-heading"><strong>Apellido</strong></label>
                        <InputText class="form-control theme-input" @bind-Value="chofer.Apellido" />
                        <ValidationMessage For="() => chofer.Apellido" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="col-form-label text-heading"><strong>Cédula</strong></label>
                        <InputText class="form-control theme-input" @bind-Value="chofer.Cedula" />
                        <ValidationMessage For="() => chofer.Cedula" />
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label class="col-form-label text-heading"><strong>Teléfono</strong></label>
                        <InputText class="form-control theme-input" @bind-Value="chofer.Telefono" />
                        <ValidationMessage For="() => chofer.Telefono" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="col-form-label text-heading"><strong>Licencia</strong></label>
                        <InputText class="form-control theme-input" @bind-Value="chofer.Licencia" />
                        <ValidationMessage For="() => chofer.Licencia" />
                    </div>
                </div>

            </div>

            <!-- Footer -->
            <div class="card-footer bg-white d-flex justify-content-center gap-2">

                <button type="submit"
                        class="btn btn-accent bi bi-save"
                        disabled="@cargando">
                    @(cargando ? " Guardando..." : " Guardar")
                </button>

                <a class="btn btn-outline-accent bi bi-arrow-left-circle"
                   href="/Choferes/Index">
                    Regresar
                </a>
            </div>

        </EditForm>
    </div>
</div>

@if (MostrarModal)
{
    <div class="modal d-block" style="background:rgba(0,0,0,0.5)">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-theme">

                <div class="modal-header modal-header-accent">
                    <h5 class="modal-title mx-auto text-contrast">
                        <strong>Eliminar Chofer</strong>
                    </h5>
                </div>

                <div class="modal-body text-center">
                    <p><strong>Chofer:</strong> @chofer!.Nombre @chofer.Apellido</p>

                    @if (tieneVehiculos)
                    {
                        <div class="alert alert-warning">
                            ⚠ Este chofer tiene vehículos asignados.<br />
                            Debe primero quitar esos vehículos.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            ¿Desea eliminar este chofer?
                        </div>
                    }
                </div>

                <div class="modal-footer d-flex justify-content-center gap-2">
                    <button type="button"
                            class="btn btn-accent bi bi-trash"
                            disabled="@tieneVehiculos"
                            @onclick="EliminarChoferConfirmado">
                        Sí, eliminar
                    </button>

                    <button type="button"
                            class="btn btn-outline-accent bi bi-arrow-left"
                            @onclick="() => MostrarModal = false">
                        Regresar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int ChoferId { get; set; }

    private Choferes? chofer { get; set; } = new ();
    private bool MostrarModal = false;
    private bool cargando = false;
    private bool tieneVehiculos = false;
    private string mensajeError = string.Empty;

    private bool guardado = false;

    protected override async Task OnInitializedAsync()
    {
        chofer = await choferesService.Buscar(ChoferId);

        if (chofer != null)
        {
            tieneVehiculos = chofer.Vehiculos?.Any() == true;
        }
    }

    private void MostrarModalEliminar()
    {
        if (!tieneVehiculos)
        {
            MostrarModal = true;
        }
    }

    public async Task GuardarChofer()
    {
        mensajeError = string.Empty;
        cargando = true;

        try
        {
            if (chofer != null && await choferesService.Guardar(chofer))
            {
                navigation.NavigateTo("/Choferes/Index");
            }
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
        }
        finally
        {
            cargando = false;
        }
    }

    public async Task EliminarChoferConfirmado()
    {
        if (chofer == null || tieneVehiculos) return;

        try
        {
            if (await choferesService.Eliminar(ChoferId))
            {
                navigation.NavigateTo("/Choferes/Index");
            }
        }
        catch (Exception)
        {
            mensajeError = "No se pudo eliminar el chofer porque tiene vehículos asignados.";
            MostrarModal = false;
        }
    }
}


