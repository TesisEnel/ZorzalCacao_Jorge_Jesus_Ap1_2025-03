@page "/Choferes/Edit/{ChoferId:int}"
@inject ChoferesService choferesService
@inject NavigationManager navigation
@rendermode InteractiveServer

<PageTitle>Editar Chofer</PageTitle>

@if (chofer != null)
{
    <div class="container mt-3">
        <div class="card shadow-lg">

            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">
                    <strong>Editar Chofer</strong>
                </h5>
            </div>

            <EditForm Model="chofer" OnValidSubmit="GuardarChofer">
                <DataAnnotationsValidator />

                <div class="card-body">

                    @if (!string.IsNullOrEmpty(mensajeError))
                    {
                        <div class="alert alert-danger">@mensajeError</div>
                    }

                    <div class="row">

                        <!-- Nombre -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Nombre</strong></label>
                            <InputText class="form-control" @bind-Value="chofer.Nombre" />
                            <ValidationMessage For="() => chofer.Nombre" />
                        </div>

                        <!-- Apellido -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Apellido</strong></label>
                            <InputText class="form-control" @bind-Value="chofer.Apellido" />
                            <ValidationMessage For="() => chofer.Apellido" />
                        </div>
                    </div>

                    <div class="row">

                        <!-- Cédula -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Cédula</strong></label>
                            <InputText class="form-control" @bind-Value="chofer.Cedula" />
                            <ValidationMessage For="() => chofer.Cedula" />
                        </div>

                        <!-- Teléfono -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Teléfono</strong></label>
                            <InputText class="form-control" @bind-Value="chofer.Telefono" />
                            <ValidationMessage For="() => chofer.Telefono" />
                        </div>
                    </div>

                    <div class="row">

                        <!-- Licencia -->
                        <div class="col-12 col-md-6 mb-3">
                            <label class="col-form-label"><strong>Licencia</strong></label>
                            <InputText class="form-control" @bind-Value="chofer.Licencia" />
                            <ValidationMessage For="() => chofer.Licencia" />
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-center gap-2 bg-white">

                    <button type="submit"
                            class="btn btn-primary bi bi-save"
                            disabled="@cargando">
                        @(cargando ? " Guardando..." : " Guardar")
                    </button>

                    <button type="button"
                            class="btn btn-danger bi bi-trash"
                            disabled="@tieneVehiculos"
                            @onclick="MostrarModalEliminar">
                        Eliminar
                    </button>

                    <a class="btn btn-secondary bi bi-arrow-left-circle"
                       href="/Choferes/Index">
                        Cancelar
                    </a>
                </div>
            </EditForm>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3">Cargando información...</p>
    </div>
}

@if (MostrarModal)
{
    <div class="modal d-block" style="background:rgba(0,0,0,0.5)">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title mx-auto text-danger">
                        <strong>Eliminar Chofer</strong>
                    </h5>
                </div>

                <div class="modal-body text-center">
                    <p><strong>Chofer:</strong> @chofer!.Nombre @chofer.Apellido</p>

                    @if (tieneVehiculos)
                    {
                        <div class="alert alert-warning">
                            ⚠ Este chofer tiene vehículos asignados.<br />
                            Debe primero quitar esos vehículos.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            ¿Desea eliminar este chofer?
                        </div>
                    }
                </div>

                <div class="modal-footer d-flex justify-content-center gap-2">
                    <button type="button"
                            class="btn btn-danger bi bi-trash"
                            disabled="@tieneVehiculos"
                            @onclick="EliminarChoferConfirmado">
                        Sí, eliminar
                    </button>

                    <button type="button"
                            class="btn btn-secondary bi bi-x-circle"
                            @onclick="() => MostrarModal = false">
                        Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int ChoferId { get; set; }

    private Choferes? chofer;
    private bool MostrarModal = false;
    private bool cargando = false;
    private bool tieneVehiculos = false;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        chofer = await choferesService.Buscar(ChoferId);

        if (chofer != null)
        {
            tieneVehiculos = chofer.Vehiculos?.Any() == true;
        }
    }

    private void MostrarModalEliminar()
    {
        if (!tieneVehiculos)
        {
            MostrarModal = true;
        }
    }

    public async Task GuardarChofer()
    {
        mensajeError = string.Empty;
        cargando = true;

        try
        {
            if (chofer != null && await choferesService.Guardar(chofer))
            {
                navigation.NavigateTo("/Choferes/Index");
            }
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
        }
        finally
        {
            cargando = false;
        }
    }

    public async Task EliminarChoferConfirmado()
    {
        if (chofer == null || tieneVehiculos) return;

        try
        {
            if (await choferesService.Eliminar(ChoferId))
            {
                navigation.NavigateTo("/Choferes/Index");
            }
        }
        catch (Exception)
        {
            mensajeError = "No se pudo eliminar el chofer porque tiene vehículos asignados.";
            MostrarModal = false;
        }
    }
}


