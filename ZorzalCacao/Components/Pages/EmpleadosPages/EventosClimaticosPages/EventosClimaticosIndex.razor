@page "/EventosClimaticos/Index"
@inject EventosClimaticosService eventosService
@inject NavigationManager nav
@rendermode InteractiveServer

<PageTitle>Consulta de Eventos Climáticos</PageTitle>

<div class="container">
    <div class="card shadow-lg">

        <!-- Encabezado -->
        <div class="card-header">
            <h5 class="text-center">
                <strong>Consulta de eventos climáticos</strong>
            </h5>

            <div class="d-flex justify-content-end">
                <a class="btn btn-info bi bi-plus-square" href="/EventosClimaticos/Create">
                    Nuevo evento
                </a>
            </div>
        </div>

        <div class="card-body">

            <!-- Filtros -->
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"><strong>Filtrar por</strong></label>

                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" disabled selected>Seleccione una opción</option>
                        <option value="Id">Evento Id</option>
                        <option value="Fecha">Fecha</option>
                        <option value="Zona">Zona</option>
                        <option value="TipoEvento">Tipo de Evento</option>
                        <option value="Intensidad">Intensidad</option>
                        <option value="Observaciones">Observaciones</option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"><strong>Búsqueda</strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-outline-info bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Fecha</th>
                            <th>Zona</th>
                            <th>Tipo Evento</th>
                            <th>Intensidad</th>
                            <th>Observaciones</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ListaEventos == null || ListaEventos.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    No se han encontrado eventos climáticos.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var e in ListaEventos)
                            {
                                <tr>
                                    <td>@e.EventoClimaticoId</td>
                                    <td>@e.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@e.Zona</td>
                                    <td>@e.TipoEvento</td>
                                    <td>@e.Intensidad</td>
                                    <td>@e.Observaciones</td>

                                    <td>
                                        <a class="btn btn-sm btn-outline-primary bi bi-eye"
                                           href="/EventosClimaticos/View/@e.EventoClimaticoId"></a>

                                        <a class="btn btn-sm btn-outline-info bi bi-pencil-square"
                                           href="/EventosClimaticos/Edit/@e.EventoClimaticoId"></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer">
            <label class="col-12">
                <strong>Total eventos:</strong> @(ListaEventos?.Count ?? 0)
            </label>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    public List<EventosClimaticos> ListaEventos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await Buscar();
    }

    public async Task Buscar()
    {
        var lista = await eventosService.Listar(e => true);

        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            // Filtrar por ID
            if (Filtro == "Id" && int.TryParse(ValorFiltro, out int id))
                lista = lista.Where(e => e.EventoClimaticoId == id).ToList();

            // Filtrar por Fecha
            else if (Filtro == "Fecha" && DateTime.TryParse(ValorFiltro, out DateTime fecha))
                lista = lista.Where(e => e.Fecha.Date == fecha.Date).ToList();

            // Filtrar por Zona
            else if (Filtro == "Zona")
                lista = lista.Where(e =>
                    e.Zona.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            // Filtrar por TipoEvento
            else if (Filtro == "TipoEvento")
                lista = lista.Where(e =>
                    e.TipoEvento.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            // Filtrar por Intensidad
            else if (Filtro == "Intensidad")
                lista = lista.Where(e =>
                    e.Intensidad.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            // Filtrar por Observaciones
            else if (Filtro == "Observaciones")
                lista = lista.Where(e =>
                    (e.Observaciones ?? "").Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();
        }

        ListaEventos = lista;
    }
}

