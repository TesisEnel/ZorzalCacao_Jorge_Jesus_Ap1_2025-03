@page "/Vehiculos/View/{VehiculoId:int}"
@inject VehiculosService vehiculosService
@inject NavigationManager navigation
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Empleado")]

<PageTitle>Detalles del Vehículo</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">

            <div class="card shadow-lg border-0">

                <!-- Encabezado -->
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1">
                                <i class="bi bi-truck"></i> Detalles del Vehículo
                            </h4>
                            <small>ID: #@vehiculo.VehiculoId</small>
                        </div>

                        <a href="/Vehiculos/Index" class="btn btn-light btn-sm bi bi-arrow-left">
                            Regresar
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">

                    <!-- Marca -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-info border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-info text-white me-3">
                                        <i class="bi bi-building fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Marca</small>
                                        <h4 class="mb-0 text-info">@vehiculo.Marca</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Modelo -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-secondary border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-secondary text-white me-3">
                                        <i class="bi bi-card-list fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Modelo</small>
                                        <h4 class="mb-0">@vehiculo.Modelo</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Placa -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-dark border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-dark text-white me-3">
                                        <i class="bi bi-upc-scan fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Placa</small>
                                        <h4 class="mb-0">@vehiculo.Placa</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Año -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-success border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-success text-white me-3">
                                        <i class="bi bi-calendar-check fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Año</small>
                                        <h4 class="mb-0 text-success">@vehiculo.Anio</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Color -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-warning border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-warning text-white me-3">
                                        <i class="bi bi-palette fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Color</small>
                                        <h4 class="mb-0">@vehiculo.Color</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Tipo -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-primary border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-primary text-white me-3">
                                        <i class="bi bi-car-front fs-3"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block mb-1">Tipo de Vehículo</small>
                                        <h4 class="mb-0 text-primary">@vehiculo.TipoVehiculo</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- ✅ CHOFER REAL -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="detail-card p-4 rounded border-start border-danger border-4">
                                <div class="d-flex align-items-start">
                                    <div class="icon-circle bg-danger text-white me-3">
                                        <i class="bi bi-person-lines-fill fs-3"></i>
                                    </div>

                                    <div>
                                        <small class="text-muted d-block mb-1">Chofer Asignado</small>

                                        @if (vehiculo.Chofer == null)
                                        {
                                            <h5 class="mb-0 text-muted">Sin asignar</h5>
                                        }
                                        else
                                        {
                                            <h5 class="mb-0">
                                                @vehiculo.Chofer.Nombre @vehiculo.Chofer.Apellido
                                            </h5>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-white d-flex justify-content-center gap-2">
                    <a href="/Vehiculos/Index"
                        class="btn btn-secondary bi bi-arrow-left-circle">
                        Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int VehiculoId { get; set; }

    private Vehiculo? vehiculo { get; set; } = new ();

    protected override async Task OnInitializedAsync()
    {
        vehiculo = await vehiculosService.Buscar(VehiculoId);
    }
}


