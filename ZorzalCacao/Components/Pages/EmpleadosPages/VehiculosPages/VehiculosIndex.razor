@page "/Vehiculos/Index"
@inject VehiculosService vehiculosService
@inject NavigationManager nav
@rendermode InteractiveServer

<PageTitle> Consulta de vehículos </PageTitle>

<div class="container">
    <div class="card shadow-lg">

        <!-- Encabezado -->
        <div class="card-header">
            <h5 class="text-center">
                <strong> Consulte los vehículos </strong>
            </h5>

            <div class="d-flex justify-content-end">
                <a class="btn btn-info bi bi-plus-square" href="/Vehiculos/Create">
                    Nuevo vehículo
                </a>
            </div>
        </div>

        <div class="card-body">

            <!-- Filtros -->
            <div class="row align-items-center">
                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"><strong> Filtrar por </strong></label>

                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="">Seleccione una opción</option>
                        <option value="VehiculoId">Vehículo Id</option>
                        <option value="Marca">Marca</option>
                        <option value="Modelo">Modelo</option>
                        <option value="Placa">Placa</option>
                        <option value="TipoVehiculo">Tipo</option>
                        <option value="Chofer">Chofer</option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label class="col-form-label"><strong> Búsqueda </strong></label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button class="btn btn-outline-info bi bi-search" @onclick="Buscar"></button>
                    </div>
                </div>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Vehículo Id</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Placa</th>
                            <th>Año</th>
                            <th>Tipo</th>
                            <th>Chofer</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ListaVehiculos == null || ListaVehiculos.Count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    No se han encontrado vehículos.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var v in ListaVehiculos)
                            {
                                <tr>
                                    <td>@v.VehiculoId</td>
                                    <td>@v.Marca</td>
                                    <td>@v.Modelo</td>
                                    <td>@v.Placa</td>
                                    <td>@v.Anio</td>
                                    <td>@v.TipoVehiculo</td>

                                    <!-- ✅ CHOFER CORREGIDO -->
                                    <td>
                                        @(v.Chofer == null
                                                                        ? "Sin asignar"
                                                                        : $"{v.Chofer.Nombre} {v.Chofer.Apellido}")
                                    </td>

                                    <td>
                                        <a class="btn btn-sm btn-outline-primary bi bi-eye"
                                           href="/Vehiculos/View/@v.VehiculoId"></a>

                                        <a class="btn btn-sm btn-outline-info bi bi-pencil-square"
                                           href="/Vehiculos/Edit/@v.VehiculoId"></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer">
            <label class="col-12">
                <strong>Total vehículos:</strong> @(ListaVehiculos?.Count ?? 0)
            </label>
        </div>
    </div>
</div>

@code {
    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    public List<Vehiculo> ListaVehiculos { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await Buscar();
    }

    public async Task Buscar()
    {
        var lista = await vehiculosService.Listar(v => true);

        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "VehiculoId" && int.TryParse(ValorFiltro, out int id))
                lista = lista.Where(v => v.VehiculoId == id).ToList();

            else if (Filtro == "Marca")
                lista = lista.Where(v => v.Marca.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            else if (Filtro == "Modelo")
                lista = lista.Where(v => v.Modelo.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            else if (Filtro == "Placa")
                lista = lista.Where(v => v.Placa.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            else if (Filtro == "TipoVehiculo")
                lista = lista.Where(v => v.TipoVehiculo.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)).ToList();

            else if (Filtro == "Chofer")
                lista = lista.Where(v =>
                    v.Chofer != null &&
                    (v.Chofer.Nombre + " " + v.Chofer.Apellido)
                    .Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)
                ).ToList();
        }

        ListaVehiculos = lista;
    }
}


