@page "/Administrador/Index"
@inject IUserRoleService UserRoleService
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Menu administrador </PageTitle>

<!-- Stats Title -->
<div class="container section-title">
    <h2 style="font-weight: 700; font-size: 32px; color: #222;">Estadísticas del Sistema</h2>
    <p style="color: #555; font-size: 16px;">
        Resumen general de productores y empleados registrados
    </p>
</div>

<!-- Stats Section - Solo Productores y Empleados -->
<section id="stats" class="stats section">
    <div class="container">
        <div class="row justify-content-center" style="gap: 30px;">

            <!-- Productores -->
            <div class="col-auto">
                <div class="stats-item stats-box">
                    <i class="bi bi-people"></i>
                    <span class="purecounter"> @ListaProductores.Count</span>
                    <p><strong>Productores</strong></p>
                    <span class="description">Total registrados en el sistema</span>
                </div>
            </div>

            <!-- Empleados -->
            <div class="col-auto">
                <div class="stats-item stats-box">
                    <i class="bi bi-person-badge"></i>
                    <span class="purecounter"> @ListaEmpleados.Count </span>
                    <p><strong>Empleados</strong></p>
                    <span class="description">Equipo activo registrado</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Servicios - Solo consulta de Productores y Empleados -->
<section id="services" class="services section">

    <div class="container section-title">
        <h2 style="font-weight: 700; font-size: 32px;">Consultas Disponibles</h2>
        <p style="font-size: 16px; color: #555;">
            Opciones de gestión habilitadas para el administrador del sistema.
        </p>
    </div>

    <div class="container">
        <div class="row gy-4">

            <!-- Consulta de Productores -->
            <div class="col-lg-4 col-md-6 service-item d-flex">
                <div class="icon flex-shrink-0"><i class="bi bi-people"></i></div>
                <div>
                    <h4 class="title"><a href="/Productores/Index" class="stretched-link">Consulta de Productores</a></h4>
                    <p class="description">
                        Listado completo de productores registrados. Permite buscar, revisar y gestionar información de los productores.
                    </p>
                </div>
            </div>

            <!-- Consulta de Empleados -->
            <div class="col-lg-4 col-md-6 service-item d-flex">
                <div class="icon flex-shrink-0"><i class="bi bi-person-badge"></i></div>
                <div>
                    <h4 class="title"><a href="/ListaEmpleados/Index" class="stretched-link">Consulta de Empleados</a></h4>
                    <p class="description">
                        Visualiza los empleados registrados, consulta datos y administra la información del personal.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>

<footer id="footer" class="footer position-relative light-background">
    <div class="container">
        <div class="copyright text-center ">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">iPortfolio</strong> <span>All Rights Reserved</span></p>
        </div>
        <div class="credits">
            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            Distributed by <a href="https://themewagon.com">ThemeWagon</a>
        </div>
    </div>
</footer>

<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>

@code 
{
    public List<ApplicationUser> ListaProductores = new List<ApplicationUser>();

    public List<ApplicationUser> ListaEmpleados = new List<ApplicationUser>();

    protected override async Task OnInitializedAsync()
    {
        //Listado de productores y empleados
        var productores = await UserRoleService.GetUsersByRoleAsync("Productor");
        ListaProductores = productores.ToList();

        var empleados = await UserRoleService.GetUsersByRoleAsync("Empleado");
        ListaEmpleados = empleados.ToList();
    }
}